<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#939393"> <!-- Ripple Effect 색상 -->

    <!--mask? 이건 무슨 뜻이지.-->
    <!--여백의 색을 지정해주는 것이다.-->


    <!--내용물의 색상을 지정. 쉐이프도 지정.-->
    <!--margin 설정-->
    <item
        android:id="@android:id/background"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">


        <shape android:shape="rectangle">

            <!--테두리 굵기-->
            <!--테두리색-->
            <stroke
                android:width="2sp"
                android:color="#353535" />

            <!--배경색-->
            <solid android:color="#FFFFFF" />

            <!--사각형 각모서리를 둥글게 함-->
            <corners android:radius="14dp" />

            <!--필요한지 잘 모르곘는데 일단 둠.-->
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />

        </shape>
    </item>

</ripple>

