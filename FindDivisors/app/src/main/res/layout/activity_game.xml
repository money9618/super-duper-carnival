<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/linearLayout_1st"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#91EFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/try_count_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#0018FFFF"
                    android:gravity="center|left"
                    android:text="try_count_text_view"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/last_number_count_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/time_View"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/time_ripple_effect"
                    android:gravity="center|right"
                    android:paddingRight="20dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/object_number_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#40C4FF"
                android:gravity="center"
                android:text="object_numbers_text_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/number_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:autoText="true"
                android:background="#43A047"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="number_details_text_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/input_number_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#448AFF"
                android:gravity="center|right"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="inputNumber"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00B1C8"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:autoSizeTextType="none"
                    tools:text="status_text_view" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/NumberPadLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"

            android:background="#ACACAC"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:shadowColor="#F44336"
                        android:text="7"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="8"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="9"

                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="4"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="5"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="6"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="1"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="2"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_ripple_effect"
                        android:text="3"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:background="@drawable/custom_ripple_effect2"
                        android:text="0"
                        app:autoSizeMaxTextSize="35sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ripple_effect3"
                    android:text="C"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeTextType="uniform"

                    />

                <Button
                    android:id="@+id/divide_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/custom_ripple_effect4"
                    android:text="÷="
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>


        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:foregroundGravity="center"
            android:visibility="visible"
            app:adSize="BANNER"
            app:adUnitId="@string/test_google_ad_app_id_text" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>